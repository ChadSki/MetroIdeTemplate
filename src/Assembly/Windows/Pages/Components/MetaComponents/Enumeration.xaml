<UserControl x:Class="Assembly.Windows.Pages.Components.MetaComponents.Enumeration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="28" Width="580"
             HorizontalAlignment="Left">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="lblEnumName" Text="{Binding Name}" ToolTip="{Binding Path=Name}"
                       Style="{DynamicResource GenericTextblock}" Width="180" VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       TextTrimming="CharacterEllipsis" />
            <ComboBox x:Name="cbEnumOptions"
                      ItemsSource="{Binding Values}"
                      SelectedValue="{Binding SelectedValue}"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Width="175">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel VirtualizingStackPanel.IsVirtualizing="True"
                                                VirtualizingStackPanel.VirtualizationMode="Recycling" />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock x:Name="lblType" Text="{Binding TypeStr}" Style="{DynamicResource GenericTextblock}"
                       VerticalAlignment="Center" Width="150" Margin="20,0,0,0" />
        </StackPanel>

    </Grid>
</UserControl>