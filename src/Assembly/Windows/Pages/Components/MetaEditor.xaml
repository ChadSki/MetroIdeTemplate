        <Grid Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
            <Border BorderThickness="0,1,0,0" BorderBrush="#434346" Background="#FF303032">
                <Grid>
                    <CheckBox x:Name="cbShowInvisibles" Content="Show Invisibles" Margin="0,0,10,0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              Checked="cbShowInvisibles_Altered"
                              Unchecked="cbShowInvisibles_Altered" />
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnPluginSave" ToolTip="Save the current changes to the cache file. (Ctrl + S)"
                                Content="Save Changes"
                                Width="100" Margin="10,0,0,0" Click="btnPluginSave_Click" />
                        <Button x:Name="btnPluginRevisionViewer"
                                ToolTip="View who researched the plugin and what they did. (Ctrl + Shift + R)"
                                Content="Revisions"
                                Width="70" Margin="5,0,0,0" Click="btnPluginRevisionViewer_Click" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>