<UserControl x:Class="Assembly.Windows.Pages.Components.MetaContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <TabControl x:Name="tbMetaEditors" TabStripPlacement="Bottom" Background="#252526"
                    SelectionChanged="tbMetaEditors_SelectionChanged" BorderBrush="{x:Null}">
            <TabItem x:Name="tabTagInfo" Style="{DynamicResource MetroTabControlBottom}" Header="information" />
            <TabItem x:Name="tabMetaEditor" Style="{DynamicResource MetroTabControlBottom}" Header="meta editor"
                     Height="21"
                     VerticalAlignment="Top" />
            <TabItem x:Name="tabPluginEditor" Style="{DynamicResource MetroTabControlBottom}" Header="plugin editor" />
            <TabItem x:Name="tabBspEditor" Visibility="Collapsed" Style="{DynamicResource MetroTabControlBottom}"
                     Header="bsp editor" />
        </TabControl>
    </Grid>
</UserControl>